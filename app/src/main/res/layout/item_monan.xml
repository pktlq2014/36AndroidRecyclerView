<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:orientation="vertical"
    android:layout_height="250dp">

    <ImageView
        android:id="@+id/imageViewMonAn"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_width="250dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="150dp"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textViewTenMonAn"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="#f20"
            android:textSize="20sp"
            tools:text="Tên Món Ăn"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/imageViewMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewDiaChiMonAn"
            android:textColor="#5C6BC0"
            android:textSize="16sp"
            android:textStyle="italic"
            android:maxLines="2"
            android:layout_gravity="center"
            android:text="Địa Chỉ"
            android:gravity="center"
            android:layout_below="@id/textViewTenMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvGiaMonan"
            android:textColor="#FF0707"
            android:textStyle="italic"
            android:maxLines="1"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_below="@id/textViewDiaChiMonAn"
            android:text="Giảm Giá Trực Tiếp 10%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_star_half_24px"
            />
    </LinearLayout>


</LinearLayout>