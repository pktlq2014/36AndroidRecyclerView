<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="850dp"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:hint="Nội Dung"
        android:gravity="center"
        android:textSize="30dp"
        android:background="#009688"
        android:layout_centerHorizontal="true"
        android:id="@+id/editTextNoiDung"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Cập Nhật"
        android:id="@+id/butTonCapNhat"
        android:layout_below="@id/editTextNoiDung"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giao Hàng Tận Nơi"
        android:textSize="30dp"
        android:layout_below="@id/butTonCapNhat"
        android:id="@+id/textViewGiaoHang"
        android:layout_centerHorizontal="true"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMonan"
        android:layout_below="@id/textViewGiaoHang"
        tools:listitem="@layout/item_monan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt Bàn Ưu Đãi"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/recyclerViewMonan"
        android:id="@+id/textViewGiaoHang1"
        android:layout_centerHorizontal="true"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMonan1"
        android:layout_below="@id/textViewGiaoHang1"
        tools:listitem="@layout/item_monan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>